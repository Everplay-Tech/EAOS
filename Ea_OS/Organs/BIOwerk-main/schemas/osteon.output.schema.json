{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "osteon.output.schema.json",
  "type": "object",
  "required": [
    "sections",
    "toc"
  ],
  "properties": {
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "text"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "text": {
            "type": "string"
          }
        }
      }
    },
    "toc": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "citations": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
